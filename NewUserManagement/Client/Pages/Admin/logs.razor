@* @page "/logs"

<h3>Logs</h3>

@if (logEntries == null)
{
	<p>Loading...</p>
}
else if (logEntries.Count == 0)
{
	<p>No logs found.</p>
}
else
{
	<table class="table">
		<thead>
			<tr>
				<th>Timestamp</th>
				<th>User ID</th>
				<th>Action</th>
				<th>Details</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var logEntry in logEntries)
			{
				<tr>
					<td>@logEntry.Timestamp</td>
					<td>@logEntry.UserId</td>
					<td>@logEntry.Action</td>
					<td>@logEntry.Details</td>
				</tr>
			}
		</tbody>
	</table>
}

@code {
	List<NewUserManagement.Shared.Models.LogEntry> logEntries;

	protected override async Task OnInitializedAsync()
	{
		// Fetch log entries from the server
		logEntries = await LoggingService.GetLogEntries();
	}
}
 *@
